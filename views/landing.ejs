<body>
  <!-- Cursor glow -->
  <div class="cursor-glow" id="cursorGlow"></div>

  <!-- Full-screen immersive landing -->
  <div class="scene" id="scene">

    <!-- Floating particles -->
    <canvas id="particles"></canvas>

    <!-- Centered content -->
    <div class="center">
      <div class="logo-mark">
        <svg viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M30 5L55 50H5L30 5Z" stroke="rgba(196,98,42,0.4)" stroke-width="1" fill="none"/>
          <path d="M30 15L45 45H15L30 15Z" stroke="rgba(196,98,42,0.6)" stroke-width="1" fill="none"/>
